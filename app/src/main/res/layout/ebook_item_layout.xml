<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FF13497B"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_pdf"/> <!-- Use marginEnd for spacing -->

        <TextView
            android:id="@+id/ebookName"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Data Structures and Algorithms"
            android:textSize="@dimen/text_size0"
            android:textColor="@color/white"
            android:fontFamily="@font/prodsansbold"/>

        <ImageView
            android:id="@+id/ebookDownload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_download"
            android:layout_marginLeft="-35dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
